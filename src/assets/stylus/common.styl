/* Common styles */

html
  height: 100%

body
  height: 100%
  min-height: 100vh
  margin: 0
  font-family 'Arial', sans-serif
  background: #FFFFFF
  overflow-x: hidden
  overflow-y: scroll

img
  max-width: 100%
  display: block

.container
  max-width: 1020px
  margin: 0 auto
  padding: 0 20px
  box-sizing border-box
  @media (max-width: 767px)
    padding: 0 15px
  @media (max-width: 479px)
    padding: 0 10px

.wrapper
  min-height: 100%
  margin: 0 auto
  display: flex
  flex-direction: column

.content
  flex: 1 0 auto
  position: relative

.main-content
  margin: 20px 0 0
  display: flex

  &__col
    width: 100%
    max-width: 650px
    margin: 0 10px 0 0
    @media (max-width: 991px)
      max-width: 100%
      margin: 0 !important

  &--left
    .main-content__col
      margin: 0 0 0 10px

  .sidebar
    margin: 0 auto 0 0

.white
  color: #FFFFFF

.blue
  color: #009DEA



/* Links */

.link
  transition: .2s
  cursor: pointer



/* Paragraph */

.p
  color: #000000
  font-size: 13px



/* Inputs */

.input
  width: 100%
  padding: 5px 10px
  border-radius: 5px
  border: 1px solid #999999
  box-sizing: border-box
  outline: none
  transition: .2s

  &::placeholder
    color: #AFAFAF
    font-size: 13px

  &:focus
    border: 1px solid #F8D500

.textarea
  width: 100%
  max-width: 100%
  min-width: 100%
  max-height: 300px
  min-height: 30px
  padding: 5px
  box-sizing: border-box
  outline: none

  &::placeholder
    color: #AFAFAF
    font-size: 13px

  &:focus
    border: 1px solid #F8D500

.input-title
  width: 100%
  display: inline-block
  color: #000000
  font-size: 13px
  font-weight: 600



/* Buttons */

.btn
  display: block
  min-height 30px
  padding: 12px 10px
  font-size: 13px
  font-weight: 600
  text-align: center
  text-transform: uppercase
  border-radius: 5px
  border: 1px solid #E6C700
  background: linear-gradient(0deg, #F8A200, #FFF810)
  box-sizing: border-box
  overflow: hidden
  cursor: pointer
  outline: none

.btn-blue
  width: 110px
  display: block
  padding: 4px 0
  margin: 10px 0 0 auto
  border-radius: 5px
  border: 1.5px solid #0094D7
  background: linear-gradient(180deg, #0094D7, #95D3F5)
  font-weight: 600
  font-size: 13px
  text-align: center
  color: #FFFFFF
  cursor: pointer
  opacity: 1
  transition: .2s

  &:hover, &:focus
    opacity: .7



/* Swiper.js */

.swiper-container
  .swiper-button-next, .swiper-button-prev
    width 20px
    height: 40px

    &::after
      font-size: 24px



/* Popup styles */

.popup
  width: 100%
  height: 100vh
  display: flex
  padding: 20px 0
  top: 0
  left: 0
  position: fixed
  overflow: hidden
  overflow-y: scroll
  box-sizing: border-box
  z-index: 99999
  opacity: 1

  &__cont
    width: 100%
    max-width: 440px
    margin: auto
    padding: 10px
    position: relative
    background-color: #FFFFFF
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.33)
    box-sizing: border-box
    transition: ease .3s
    z-index: 4

  &__title
    width: 100%
    display: inline-block
    margin: 20px 0
    color: #000000
    font-size: 18px
    text-align: center
    text-transform: uppercase

  .input-wrapper
    max-width: 250px
    margin: 0 auto

  .input
    border-radius: 0

  .btn
    width: 100%
    max-width: 180px
    margin: 10px auto 0
    padding: 7px 10px

  .btn-close
    width: 40px
    height: 40px
    padding: 0
    top: 6px
    right: 6px
    position: absolute
    color: #333333
    font-size: 28px
    border: none
    background: none
    transition: .2s
    outline: none
    cursor: pointer
    z-index: 99

    &:hover
      opacity: .6

.popup-form
  margin: 10px 0 0
  padding: 0 20px 20px
  background: #EFEFEF
  box-sizing: border-box

.popup-bg
  width: 100%
  height: 100vh
  min-height: 100%
  top: 0
  left: 0
  position: fixed
  background-color: rgba(0, 0, 0, 0.7)
  transition: ease .6s
  z-index: 3



/* Tranition popup animation */

.popup-enter
  transition: all .3s

  .popup__cont
    opacity: 0
    transform: scale(0.9)

  .popup-bg
    opacity: 0

.popup-enter-to
  transition: all .3s

  .popup__cont
    opacity: 1
    transform: scale(1)

  .popup-bg
    opacity: 1

.popup-leave-active
  transition: all .3s

  .popup__cont
    opacity: 0
    transform: scale(1.1)

  .popup-bg
    opacity: 0
    transition: all .3s
